# scripts/market_analysis.py

import requests
import pandas as pd

def fetch_market_data(api_url):
    """
    Fetch market data for NFTs from an API.
    
    :param api_url: Base URL of the NFT API
    :return: DataFrame with market data
    """
    response = requests.get(f'{api_url}/market')
    response.raise_for_status()
    data = response.json()
    df = pd.DataFrame(data)
    return df

def analyze_market_data(df):
    """
    Analyze market data for NFTs.
    
    :param df: DataFrame with market data
    :return: Analysis results as DataFrame
    """
    analysis = {
        'total_sales': df['total_sales'].sum(),
        'average_price': df['average_price'].mean(),
        'top_collections': df.groupby('collection_name')['total_sales'].sum().nlargest(5).reset_index()
    }
    analysis_df = pd.DataFrame([analysis])
    return analysis_df

# Example usage:
